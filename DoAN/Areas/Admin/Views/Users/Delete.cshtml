@model DoAN.Models.User
@{
    Layout = null;
    ViewData["Title"] = "Xóa người dùng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #1c1c1c;
            color: #ffffff;
        }

        .delete-box {
            background-color: #222831;
            padding: 30px;
            border-radius: 12px;
            max-width: 600px;
            margin: 60px auto;
        }

        h2 {
            color: #dc3545;
        }

        .btn-feane {
            background-color: #ffbe33;
            border: none;
            color: white;
            font-weight: 600;
            border-radius: 30px;
            padding: 8px 20px;
        }

            .btn-feane:hover {
                background-color: #e69c00;
            }

        .btn-danger {
            border-radius: 30px;
            padding: 8px 20px;
        }

        .btn-secondary {
            border-radius: 30px;
            padding: 8px 20px;
        }
    </style>
</head>
<body class="sub_page">
    <div class="hero_area">
        <div class="bg-box">
            <img src="~/images/hero-bg.jpg" alt="background" />
        </div>

        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <span>Feane Admin</span>
                    </a>
                </nav>
            </div>
        </header>
    </div>

    <section class="food_section layout_padding">
        <div class="container">
            <div class="delete-box shadow">
                <h2 class="text-center"><i class="fa fa-trash-alt me-2"></i>@ViewData["Title"]</h2>
                <p class="mt-4 fs-5 text-center">
                    Bạn có chắc chắn muốn xóa người dùng:
                    <strong class="text-warning">@Model.Username</strong>?
                </p>

                <form asp-action="Delete" method="post" class="text-center mt-4">
                    <input type="hidden" asp-for="UserId" />
                    <button type="submit" class="btn btn-danger me-2">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </form>
            </div>
        </div>
    </section>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/custom.js"></script>
</body>
</html>
