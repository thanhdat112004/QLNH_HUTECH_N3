@model IEnumerable<DoAN.Models.User>
@{
    Layout = null;
    ViewData["Title"] = "Danh sách người dùng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        .btn-feane {
            background-color: #ffbe33;
            border: none;
            color: white;
            font-weight: 600;
            border-radius: 30px;
            padding: 6px 16px;
        }

            .btn-feane:hover {
                background-color: #e69c00;
            }

        .btn-outline-feane {
            border: 1px solid #ffbe33;
            color: #ffbe33;
            border-radius: 30px;
            padding: 4px 12px;
            font-weight: 600;
        }

            .btn-outline-feane:hover {
                background-color: #ffbe33;
                color: white;
            }

        .feane-table th {
            background-color: #ffbe33;
            color: #fff;
            text-align: center;
        }

        .feane-table td {
            vertical-align: middle;
        }

        .table-box {
            background-color: #222831;
            border-radius: 12px;
            padding: 20px;
            color: #fff;
        }

            .table-box h2 {
                color: #ffbe33;
            }
    </style>
</head>
<body class="sub_page">
    <div class="hero_area">
        <div class="bg-box">
            <img src="~/images/hero-bg.jpg" alt="hero background">
        </div>

        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <span>Feane Admin</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                        <span class=""></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MenuItems" asp-action="Index">Món ăn</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">Người dùng</a>
                            </li>
                        </ul>
                        <div class="user_option">
                            <a href="#" class="btn btn-warning">Đăng xuất</a>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
    </div>

    <section class="food_section layout_padding">
        <div class="container table-box">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>@ViewData["Title"]</h2>
                <a asp-action="Create" class="btn btn-feane"><i class="fa fa-plus"></i> Thêm người dùng</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-dark table-bordered feane-table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Xác thực</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td class="text-center">
                                    @if (user.EmailConfirmed)
                                    {
                                        <i class="fa fa-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times text-danger"></i>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-info me-1">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-success me-1">
                                        <i class="fa fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </section>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/custom.js"></script>
</body>
</html>
