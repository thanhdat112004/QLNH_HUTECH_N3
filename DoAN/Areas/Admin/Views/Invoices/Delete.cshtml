@model DoAN.Models.ViewModels.InvoiceEditViewModel

@{
    ViewBag.Title = "Xóa hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Xóa Hóa Đơn</h2>

    <div class="alert alert-warning text-center">
        <strong>Bạn có chắc chắn muốn xóa hóa đơn này?</strong>
    </div>

    <div class="card p-4 shadow-sm">
        <dl class="row">
            <dt class="col-sm-4">Tên khách hàng</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-4">Tên đăng nhập</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-4">Ngày lập</dt>
            <dd class="col-sm-8">@Model.InvoiceDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Tổng tiền</dt>
            <dd class="col-sm-8">@Model.TotalAmount.ToString("N0") đ</dd>

            <dt class="col-sm-4">Phương thức thanh toán</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentMethod)</dd>
        </dl>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.InvoiceId" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="InvoiceId" />

        <div class="text-center">
            <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-pill ml-2">Hủy</a>
        </div>
    </form>
</div>
